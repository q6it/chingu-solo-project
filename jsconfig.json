{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "@core/*": ["./src/App/core/*"],
      "@routes/*": ["./src/App/routes/*"],
      "@components/*": ["./src/components/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": ["./src/**/*"]
}
